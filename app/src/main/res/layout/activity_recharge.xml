<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ToUpWallet.RechargeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_back"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="Top Up E-Wallet"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:text="Nhập số tiền muốn nạp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtInputMoney"
        android:hint=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="number"
        android:background="@drawable/box_circle_wb"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:paddingVertical="40dp"
        android:paddingHorizontal="80dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv10k"
            android:text="10.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv20k"
            android:text="20.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv50k"
            android:text="50.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv100k"
            android:text="100.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv200k"
            android:text="200.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv500k"
            android:text="500.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1000k"
            android:text="1.000.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv2000k"
            android:text="2.000.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv5000k"
            android:text="5.000.000 VNĐ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/box_circle_wb"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnTopUp"
        android:text="Nạp tiền"
        android:textSize="20dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>